<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnStd"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/bg_search"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_manage_search_24"
                android:layout_marginLeft="15dp" />
            <EditText
                android:id="@+id/edtSearchStd"
                android:hint="Tìm kiếm sinh viên"
                android:lines="1"
                android:layout_weight="7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFE503"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:shadowColor="@null"
                android:background="@null"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <TextView
            android:id="@+id/tvChuaCoSVDetails"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/machudao"
            android:text="CHƯA CÓ SINH VIÊN NÀO"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/revStdDetails"
            android:layout_below="@id/lnStd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</layout>