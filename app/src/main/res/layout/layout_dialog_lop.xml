<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_item_lop"
    android:alpha="0.8"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="75dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_lop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:background="@drawable/bg_gradient_radius"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mã lớp: "
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="7"
            android:id="@+id/tvMaLop_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DH2018CNTT6"
            android:textColor="@color/design_default_color_primary"
            android:textSize="25dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_gradient_radius"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên lớp: "
            android:textColor="@color/white"
            android:textSize="25dp"

            android:textStyle="bold" />

        <TextView
            android:layout_weight="7"
            android:id="@+id/tvTenLop_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CNTT6"
            android:textColor="@color/design_default_color_primary"
            android:textSize="25dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_gradient_radius"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="GVCN: "
            android:textColor="@color/white"
            android:textSize="25dp"

            android:textStyle="bold" />

        <TextView
            android:layout_weight="7"
            android:id="@+id/tvGVCN_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đặng Thị Nhung"
            android:textColor="@color/design_default_color_primary"
            android:textSize="25dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_gradient_radius"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sí số: "
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="7"
            android:id="@+id/tvSiso_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/design_default_color_primary"
            android:textSize="25dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>